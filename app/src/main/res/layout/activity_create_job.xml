<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bws.starlab.CreateJobActivity">

    <include
        android:id="@+id/container_header_lyt"
        layout="@layout/header_username_activity" />

    <include
        android:id="@+id/container_header_lyt"
        layout="@layout/header_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2.5"
            android:weightSum="8">

            <LinearLayout style="@style/LinearLayout_createjob">

                <TextView
                    style="@style/Text_view"
                    android:text="Name" />

                <TextView
                    android:id="@+id/textName"
                    style="@style/Text_view1"
                    android:text="candis store" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayout_createjob">
                <TextView
                    style="@style/Text_view"
                    android:text="Contact person" />

                <TextView
                    android:id="@+id/textContactPerson"
                    style="@style/Text_view1"
                    android:text="Mr. Alex Cooper" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayout_createjob">
                <TextView
                    style="@style/Text_view"
                    android:text="Job code" />

                <Spinner
                    android:id="@+id/spinnerJobCode"
                    style="@style/Text_view1"
                    android:text="candis store" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayout_createjob">
                <TextView
                    style="@style/Text_view"
                    android:text="Priority" />

                <TextView
                    android:id="@+id/textPriority"
                    style="@style/Text_view1"
                    android:text="Normal" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayout_createjob">
                <TextView
                    style="@style/Text_view"
                    android:text="Description" />

                <TextView
                    android:id="@+id/textDiscription"
                    style="@style/Text_view1"
                    android:text="Schedule Maintenance" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayout_createjob">
                <TextView
                    style="@style/Text_view"
                    android:text="Date" />

                <TextView
                    android:id="@+id/textdate"
                    style="@style/Text_view1"
                    android:text="19 May 2014" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayout_createjob">
                <TextView
                    style="@style/Text_view"
                    android:text="Location" />

                <TextView
                    android:id="@+id/textLocation"
                    style="@style/Text_view1"
                    android:text="London" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Assets Details"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:background="@color/color_orange_Bg"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
